docker.enabled = true
process.container = 'erikwaskiewicz/ctdna-base:latest'

profiles {

    standard {
        params.outdir = "$baseDir/data/real_data/output"
        params.indir = "$baseDir/data/real_data/input"
        params.sample_name = null
        params.ref_fasta = null
    }

    test {
        params.outdir = "$baseDir/data/test_data/output"
        params.indir = "$baseDir/data/test_data/input"
        params.sample_name = "test_data"
        params.ref_fasta = "$params.indir/human_chr22_hg19.fasta"
    }

}
